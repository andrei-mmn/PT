<script id="pt-plugin-limit" type="text/x-handlebars-template">
    <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Results: <span class="_selectedLabel">{{DefaultLabel}}</span>
