</script>
<script id="pt-hideout-hiddenColumn" type="text/x-handlebars-template">
    <a style="cursor:pointer;"><span class="glyphicon glyphicon-eye-close" style="float:left"></span>{{Name}}</a>
</script>

<!--/Hideout-->
