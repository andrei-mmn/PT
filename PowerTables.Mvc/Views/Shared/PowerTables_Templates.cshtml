<script type="text/javascript">
    $(document).ready(function () {
        Handlebars.registerPartial('pt-hideout-visibleColumn', $('#pt-hideout-visibleColumn').html());
        Handlebars.registerPartial('pt-hideout-hiddenColumn', $('#pt-hideout-hiddenColumn').html());
        Handlebars.registerHelper('equal', function (lvalue, rvalue, options) {
            if (arguments.length < 3)
                throw new Error("Handlebars Helper equal needs 2 parameters");
            if (lvalue != rvalue) {
                return options.inverse(this);
            } else {
                return options.fn(this);
            }
        });
    });
</script>
<script id="pt-layout" type="text/x-handlebars-template">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6 col-lg-6" data-placeholder="ltPlugins">
                
                <div class="btn-group" data-placeholder="ltPlugins_toolbar" style="margin-bottom:10px"></div>
                <br />
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 text-right" data-placeholder="rtPlugins">
                <div class="btn-group" data-placeholder="rtPlugins_toolbar" style="padding-bottom:10px"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12">
                <hr />
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <table class="table table-striped table-condensed table-bordered" data-placeholder="tableItself">
                    <thead style="display: table-header-group;">
                        <tr data-placeholder="headers"></tr>
                        <tr data-placeholder="filters"></tr>
                    </thead>
                    <tbody data-placeholder="body"></tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" data-placeholder="lbPlugins">
                <div class="btn-group" data-placeholder="lbPlugins_toolbar"></div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right" data-placeholder="rbPlugins" style="float:right;">
                <div class="btn-group" data-placeholder="rbPlugins_toolbar"></div>
            </div>
        </div>
    </div>
</script>
<script id="pt-pluginPlaceholder" type="text/x-handlebars-template">
    {{#if lt}}
