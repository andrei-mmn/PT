<!-- Filters -->
<script id="pt-emptyfilter" type="text/x-handlebars-template">
    <th></th>
</script>
<script id="pt-valuefilter" type="text/x-handlebars-template">
    <th>
        <input type="text" data-for="{{Column.RawName}}" style="margin:0;width:100%;max-width:100%;" class="form-control input-md" placeholder="{{Configuration.Placeholder}}" />
    </th>
</script>

<script id="pt-rangefilter" type="text/x-handlebars-template">
    <th>
        <input type="text" data-for="{{Column.RawName}}" data-rng="from" class=" form-control input-md" style="margin:0;width:100%;max-width:100%;" placeholder="{{Configuration.FromPlaceholder}}"><br />
        <input type="text" data-for="{{Column.RawName}}" data-rng="to" class="form-control input-md" style="margin:0;width:100%;max-width:100%;" placeholder="{{Configuration.ToPlaceholder}}">
    </th>
</script>
<script id="pt-selectfilter" type="text/x-handlebars-template">
    <th>
        <select class="form-control input-md" style="margin:0;width:100%;max-width:100%;" data-for="{{Column.RawName}}" {{#if Configuration.IsMultiple}} multiple="multiple" {{/if}}>
            {{#each Configuration.Items}}
            <option {{#if Disabled}} disabled="disabled" {{/if}} value="{{Value}}" {{#if Selected}} selected {{/if}}>{{Text}}</option>
            {{/each}}
        </select>
    </th>
</script>
<!-- /Filters -->
<!--Hideout-->
<script id="pt-hideout" type="text/x-handlebars-template">
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Show/Hide Columns
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            {{#each ColumnsStates}}
            {{#if Visible}}
            <li data-showhide="{{RawName}}">{{> pt-hideout-visibleColumn }}</li>
            {{/if}}
            {{#unless Visible}}
            <li data-showhide="{{RawName}}">{{> pt-hideout-hiddenColumn }}</li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
</script>
