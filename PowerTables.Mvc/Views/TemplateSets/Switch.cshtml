@using PowerTables
@{
    var tplCookie = Request.QueryString["tpl"];
    if (string.IsNullOrEmpty(tplCookie))
    {
        tplCookie = "Bootstrap";
    }
    var tplFile = string.Format("~/Views/TemplateSets/Lattice_{0}.cshtml", tplCookie);
}

@if (tplCookie == "Bootstrap")
{
    <text>
        <link rel="stylesheet" href="~/Content/bootstrap.css" />
        <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
        @{ Html.RenderPartial("Datepicker"); }
    </text>
}

@if (tplCookie == "Foundation")
{
    <text>
        <link rel="stylesheet" href="~/Content/foundation.min.css" />
        <script type="text/javascript" src="~/Scripts/foundation.min.js"></script>
        <script type="text/javascript">
            function initFoundation(e) {
                $(e).foundation();
            }
            function destroyFoundation(e) {
                $(e).foundation('destroy');
            }
        </script>
        @{ Html.RenderPartial("Datepicker"); }
    </text>
}


@{ Html.RenderTemplates("lt", tplFile); }
